<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>YAMP_MedPod</defName>
    <thingClass>YAMP.Building_MedPod</thingClass>
    <label>med pod</label>
    <description>A technologically advanced medical pod that uses medicine as fuel to perform complex operations with high success rates.</description>
    <graphicData>
      <texPath>Things/Building/Medical/YAMP_MedPod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <size>(2,2)</size>
    <drawerType>MapMeshAndRealTime</drawerType>  <!-- Add this for PostDraw to work -->
    <tickerType>Normal</tickerType>
    <rotatable>true</rotatable>
    <hasInteractionCell>true</hasInteractionCell>
    <interactionCellOffset>(0, 0, -1)</interactionCellOffset>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.5</fillPercent>
    <designationCategory>Misc</designationCategory>
    <inspectorTabs>
      <li>YAMP.ITab_MedPodMedicine</li>
      <li>YAMP.UITab_PodConditionalBills</li>
    </inspectorTabs>
    <statBases>
      <MaxHitPoints>350</MaxHitPoints>
      <WorkToBuild>2500</WorkToBuild>
      <Flammability>0.5</Flammability>
      <Mass>50</Mass>
      <MedicalTendQualityOffset>0.15</MedicalTendQualityOffset>
      <ImmunityGainSpeedFactor>1.2</ImmunityGainSpeedFactor>
      <SurgerySuccessChanceFactor>1.2</SurgerySuccessChanceFactor>
    </statBases>
    <costList>
      <Steel>100</Steel>
      <Plasteel>150</Plasteel>
      <ComponentIndustrial>10</ComponentIndustrial>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <comps>
      <li Class="YAMP.CompProp_PodTend" />
      <li Class="YAMP.CompProp_PodOperate" />
      <li Class="YAMP.CompProp_PodConditionals" />
      <li Class="YAMP.CompProp_ProgressBar" />
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>1000</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable" />
      <li Class="CompProperties_AssignableToPawn">
        <drawAssignmentOverlay>false</drawAssignmentOverlay>
        <compClass>CompAssignableToPawn_Bed</compClass>
      </li>
    </comps>
    <building>
      <destroySound>BuildingDestroyed_Metal_Small</destroySound>
      <bed_humanlike>true</bed_humanlike>
      <bed_showSleeperBody>true</bed_showSleeperBody>
      <bed_defaultMedical>true</bed_defaultMedical>
      <bed_maxBodySize>2.0</bed_maxBodySize>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>
</Defs>